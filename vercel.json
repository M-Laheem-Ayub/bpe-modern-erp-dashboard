{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "erp-frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server.js"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/erp-frontend/assets/$1"
        },
        {
            "source": "/reset-password/(.*)",
            "destination": "/erp-frontend/index.html"
        },
        {
            "source": "/((?!assets/|favicon.png|vite.svg|api/).*)",
            "destination": "/erp-frontend/index.html"
        }
    ]
}