{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "erp-frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/(.*)\\.(.*)",
            "dest": "/erp-frontend/$1.$2"
        },
        {
            "src": "/(.*)",
            "dest": "/erp-frontend/index.html"
        }
    ]
}